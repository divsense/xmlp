<xml>
    <extension name="xmlp" title="Xmld" version="1.0">

        <!--<lib name="a" type="native" src="xml"/>-->
        <lib name="a" type="rio" src="mart::divsense/xmlp/producer.rio"/>
        <lib name="p" type="rio" src="mart::divsense/xmlp/parser.rio"/>

        <nob name="xml" consumer="true">

            <produce lib="a" method="xml" default-value=""/>

            <term name="label" >
                <match>
                    <head string="~" highlight-head="punctuation" highlight-body="important"/>
                </match>
                <produce method="glue" lib="a"/>
            </term>

            <term name="block" >
                <match>
                    <head string="!" highlight-head="punctuation" highlight-body="block"/>
                </match>
                <produce method="block" lib="a"/>
            </term>

            <term name="tagLine">
                <match>
                    <allow>
                        <parent nob="xmlp:xml"/>
                        <parent term="tagLine"/>
                        <parent term="label"/>
                        <parent term="block"/>
                    </allow>
                    <parse method="tagLine" lib="p"/>
                </match>

                <produce method="tagLine" lib="a"/>
                
            </term>

            <term name="attrContainer">
                <match>
                    <allow>
                        <parent nob="xmlp:xml"/>
                        <parent term="tagLine"/>
                        <parent term="label"/>
                        <parent term="block"/>
                    </allow>
                    <body string="@" highlight="attr-name"/>
                </match>

                <produce method="attrContainer" lib="a"/>
            </term>

            <term name="attrKeyContainer">
                <match>
                    <allow>
                        <parent nob="xmlp:xml"/>
                        <parent term="tagLine"/>
                        <parent term="label"/>
                        <parent term="block"/>
                    </allow>
                    <parse method="attrKeyContainer" lib="p"/>
                </match>

                <produce method="attrKeyContainer" lib="a"/>
                
            </term>

            <term name="attrLine">
                <match>
                    <allow>
                        <parent nob="xmlp:xml"/>
                        <parent term="tagLine"/>
                        <parent term="label"/>
                        <parent term="block"/>
                    </allow>
                    <parse method="attrLine" lib="p"/>
                </match>
                <produce method="attrLine" lib="a"/>
            </term>

            <term name="attrKeyValue">
                <match>
                    <allow>
                        <parent term="attrContainer"/>
                        <parent term="label"/>
                        <parent term="block"/>
                    </allow>
                    <parse method="attrKeyValue" lib="p"/>
                </match>

                <produce method="attrValue" lib="a"/>
            </term>

            <term name="attrKey">
                <match>
                    <allow>
                        <parent term="attrContainer"/>
                        <parent term="label"/>
                        <parent term="block"/>
                    </allow>
                    <parse method="attrKey" lib="p"/>
                </match>

                <produce method="attrKey" lib="a"/>
            </term>

            <term name="attrValue">
                <match>
                    <allow>
                        <parent term="attrKey"/>
                        <parent term="attrKeyContainer"/>
                        <parent term="label"/>
                        <parent term="block"/>
                    </allow>
                    <body highlight="attr-value"/>
                </match>

                <produce method="attrValue" lib="a"/>
            </term>

            <term name="textnode" >
                <match>
                    <allow>
                        <parent term="tagLine"/>
                        <parent term="label"/>
                        <parent term="block"/>
                    </allow>
                    <head string="'" highlight-head="punctuation" highlight-body="text"/>
                </match>

                <produce method="textTail" lib="a"/>
            </term>

        </nob>
    </extension>
</xml>
